# Self-Service Cloud Deployment - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env files with real credentials!

# =============================================================================
# DATABASE (Neon PostgreSQL)
# =============================================================================
# Get this from https://console.neon.tech after creating a database
DATABASE_URL=postgresql://user:password@your-host.neon.tech/neondb?sslmode=require

# =============================================================================
# AWS CONFIGURATION
# =============================================================================
# Your AWS Account ID (12 digits)
AWS_ACCOUNT_ID=123456789012

# AWS Region for deployment (default: eu-west-1)
AWS_REGION=eu-west-1

# =============================================================================
# GITHUB CONFIGURATION
# =============================================================================
# GitHub Personal Access Token with 'repo' and 'workflow' permissions
# Create at: https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# Your GitHub username or organization name
GITHUB_REPO_OWNER=your-username

# The repository name (usually "Self-Service-Cloud-Deployment" if you forked)
GITHUB_REPO_NAME=Self-Service-Cloud-Deployment

# =============================================================================
# SECURITY SECRETS
# =============================================================================
# Deployment callback secret (generate with: openssl rand -hex 32)
DEPLOYMENT_SECRET=your-deployment-secret-here

# Token encryption key - MUST be 64 hex characters (32 bytes)
# Generate with: openssl rand -hex 32
TOKEN_ENCRYPTION_KEY=your-64-character-hex-key-here
